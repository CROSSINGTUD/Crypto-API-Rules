SPEC javax.crypto.CipherInputStream

OBJECTS
	java.io.InputStream is;
	javax.crypto.Cipher ciph;
	byte[] buffer;
	int offset;
	int len;
	
EVENTS
	c1: CipherInputStream(is, ciph);
	Cons := c1;
	
	r1: read();
	r2: read(buffer); 
	r3: read(buffer, offset, len);
	Reads := r1 | r2 | r3;
	
	Close: close();
	
ORDER
	Cons, Reads+, Close

CONSTRAINTS
	len > offset;
	
REQUIRES
	generatedCipher[ciph];	
	
ENSURES
	cipheredInputStream[is, ciph];
	